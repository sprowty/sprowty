- content_for :keywords, @tags
= render :partial => 'plant'
#container
  #main
    .rightside
      .boxheadin
        %h3 Recent Projects
      .recentprojects
        - @projects.each do |project|
          = link_to project.title, project_url(project.id)
          %p
            %b By:
            = link_to project.user.username, profile_url(project.user)
            %a#stay-target-1.stay-tooltip-target.tooltip-target
          #stay-content-1.stay-tooltip-username.tooltip-username
            %a{:href => "#"} Sample Name
            %p New York City, New York
            %ul
              %li.up 215
              %li.down 0
          %p.status
            %em Status:
            %i.completed
              = project.sm_state
    .content
      .head
        .left
          %h5 Projects
        .right
          %ul.big
            %li= link_to('All', projects_url, :class => "active")
            %li= link_to 'Open', projects_url(:filter => 'open')
            %li= link_to 'Completed', projects_url(:filter => 'completed')
      #inboxhead
        %b.left Order #
        %b.right Updated
        .clear
      #inbox
        .post{:style=>'border-bottom: 1px solid #D6BF9E;'}
          - @projects.each do |project|
            .row
              .field{:style=>'min-width:10%;'}
                = link_to project.id, project_inside_path(project.id)
              .field{:style=>'min-width:50%;'}
                = project.title
              .field{:style=>'min-width:10%;'}
                = project.updated_at.strftime("%b %d, %Y")
            .clear
      #paginationholder
        .pagination
          %ol.wp-paginate
            %li
              %span.title
            %li
              %a.prev{:href => "#"} ‹‹
            %li
              %span.currentpage 1
            %li
              %a.page{:href => "#", :title => "2"} 2
            %li
              %a.page{:href => "#", :title => "3"} 3
            %li
              %a.page{:href => "#", :title => "4"} 4
            %li
              %a.next{:href => "#"} ››
  .clear
#botlinks
  .left
    %ul
      %li
        %a{:href => "#"} Contact Us
      %li
        %a{:href => "#"} Terms Of Service
      %li
        %a{:href => "#"} How To
      %li
        %a{:href => "#"} FAQ
      %li
        %a{:href => "#"} Blog
  .right
    %h4 Sprowty
    %b All Rights Reserved, 2011
