- content_for :keywords, @tags
#subhead
#needdone
  .holder
    .left
      %h4 Need Something Done?
    / /LEFT
    .right
      %form#search{:action => "", :method => "get", :name => "input"}
        %input.field{:name => "Type What You Need Done Here", :onblur => "if(this.value=='')this.value='Type What You Need Done Here'", :onfocus => "if(this.value=='Type What You Need Done Here')this.value=''", :type => "text", :value => "Type What You Need Done Here"}/
        %button{:type => "submit"} Plant
    / /RIGHT
/ /NEEDDONE
#container
  #main
    .rightside
      .boxheadin
        %h3 Recent Projects
      .recentprojects
        - @projects.each do |project|
          = link_to project.title, project_url(project.id)
          %p
            %b By:
            = link_to project.user.username, profile_url(project.user)
            %a#stay-target-1.stay-tooltip-target.tooltip-target
          #stay-content-1.stay-tooltip-username.tooltip-username
            %a{:href => "#"} Sample Name
            %p New York City, New York
            %ul
              %li.up 215
              %li.down 0
          / /Stay Content 1
          %p.status
            %em Status:
            %i.completed
              = project.sm_state
      / /BOX
    / /RIGHTSIDE
    .content
      .head
        .left
          %h5 Projects
        / /LEFT
        .right
          %ul.big
            %li= link_to('All', projects_url, :class => "active")
            %li= link_to 'Open', projects_url(:filter => 'open')
            %li= link_to 'Completed', projects_url(:filter => 'completed')
        / /RIGHT
      / /HEAD
      #inboxhead
        %b.left Order #
        %b.right Updated
        .clear
      #inbox
        %ul
          - @projects.each do |project|
            %li
              = link_to project.id, project_inside_path(project.id)
              %span
                = project.title
              %em
                = project.updated_at
      / INBOX
      / PAGINATION
      #paginationholder
        .pagination
          %ol.wp-paginate
            %li
              %span.title
            %li
              %a.prev{:href => "#"} ‹‹
            %li
              %span.currentpage 1
            %li
              %a.page{:href => "#", :title => "2"} 2
            %li
              %a.page{:href => "#", :title => "3"} 3
            %li
              %a.page{:href => "#", :title => "4"} 4
            %li
              %a.next{:href => "#"} ››
      / /PAGINATION
    / /CONTENT
  / /MAIN
  .clear
/ /CONTAINER
