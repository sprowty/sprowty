<%= form_for project, :html => {:class => 'live-form'} do |f| %>
  <% unless error_messages_for.nil? %>
    <p><%= error_messages_for :project %></p>
  <% end %>

<div class="left">


  <div class="labelholder">
    <label>Job Title:</label>
  </div>
  <%= f.text_field :title, :class => 'field' %>

  <div class="labelholder">
    <label>Description:</label>
    <i>Insert the full description and guidelines of your job</i>
  </div>
  <%= f.text_area :description, :class => 'field' %>  

  <div class="labelholder">
    <label>Tags:</label>
    <i>Tags Associated With Job</i>
  </div>
  <%= f.text_field :tags, :class => 'field' %>

  <div class="labelholder">
    <label>Price:</label>
    <i>Enter in Increments of $5</i>
  </div>
  <%= f.text_field :price, :value => '$5', :onfocus => "if(this.value=='$5')this.value=''", :onblur => "if(this.value=='')this.value='$5'", :class => 'price' %>

</div> <!--LEFT-->


<div class="right">
<h5>Categories:</h5>
<p><i>Choose the categories your job should be listed in</i></p>


<%= f.select(:category_id,@categories), CATEGORIES, {:include_blank => true} %>

<%= f.select(:category_id,@categories), CATEGORIES, {:include_blank => true} %>

<%= f.select(:category_id,@categories), CATEGORIES, {:include_blank => true} %>




<h5>City:</h5>
<%= f.text_field :city, :class => 'city' %>

<h5>State:<h5>
<%= f.select :state, STATES, {:include_blank => true}, {:class => 'states'} %>


<h5>Due Date:</h5>
<p><i>Select Your Due Date</i></p>
<%= f.date_select :due_date, { :order => [:month, :day, :year], :use_month_numbers => true }, :class => 'date' %>


</div> <!--RIGHT-->

<div class="clear"></div>

  <%= f.submit 'Plant Seed', :class => 'plantseed' %>
  <div class="clear"></div>
  <br />
<% end %>



