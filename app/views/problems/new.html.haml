#subhead
#container
  #main
    .content{:style => 'float: none;'}
      .head
        %h5 Create a Problem
      #profile{:style=>'float: none;'}
        = form_for Problem.new do |f|
          %p= error_messages_for :problem
          .settings
            .label
              %label Problem details:
            .input
              = f.text_area :detail
            .label
              %label Your Name:
            .input
              = f.text_field :name
            .label
              %label Best method to contact you:
            .input
              = f.text_field :contact
            .clear
            = f.submit 'Save', :class => 'save', :style => 'width: 170px; margin-left: 358px'
