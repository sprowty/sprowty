#subhead
#needdone
  .holder
    .left
      %h4 Sign up
    / /LEFT
#container
  #main
    #signupcontainer{:style => "background-color: #FFF; height: 400px;"}
      .left
        = semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          %p= devise_error_messages!
          %p= f.text_field :username,               :class => "field clearField",     :value => 'Username'
          %p= f.email_field :email,                 :class => 'field clearField',     :value => 'E-mail Address'
          %p= f.text_field :password,               :class => 'field clearField',     :value => 'Password'
          %p= f.text_field :password_confirmation,  :class => 'fieldlast clearField', :value => 'Password Confirmation'
      / LEFT
      .right
        %img.recaptcha{:src => "/images/dummy_recaptcha.gif"}/
        .radio
          %input{:name => "data[Submit][question]", :type => "radio"}/
          %p
            I have read & agree to sprowtyâ€™s
            %a{:href => "#"} Terms & Conditions
        = f.submit 'Create Account', :class => 'create'
      / RIGHT
    / SIGNUPCONTAINER
