    .left
      %h4 Forgot Your Password?
#container
  #main
    - if alert
      .errors
        %p= alert
    #signupcontainer
      .left
        = semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name)) do |f|
          = devise_error_messages!
          %p
            %h2 Please enter your E-mail, and we will send you reset instructions
            = f.text_field :email, :class => "field clearField"
          %p= f.submit "Send me reset password instructions"
        = render :partial => "devise/shared/links"
