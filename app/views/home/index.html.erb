<div class="holder"></div>
<div id="needdone">
  <div class="holder">

    <div class="left">
      <h4>Need Something Done?</h4>
    </div> <!--/LEFT-->


    <div class="right">
      <form id="search" method="get" action="" name="input">
        <input class="field" id="what_you_need_done" name="what_you_need_done" type="text" placeholder="Type What You Need Done Here" />
        <button id="plant_it" type="submit">Plant</button>
      </form>
    </div> <!--/RIGHT-->


  </div>
</div> <!--/NEEDDONE-->




<div id="container"> 


  <div id="main">

    <div class="rightside">

      <h2>Harvest Fields</h2>
      <p>Find the jobs you want to do</p>


      <%= form_for :search, :url => root_url do |f| %>
        <%= f.text_field :title_or_description_contains, :placeholder => 'Search' %>
        <button type="submit">Search</button>
      <% end %>

      <div class="clear"></div>


      <div class="boxhead"><h3>Categories</h3></div>
      <div class="box">
        <ul class="categories">
          <li><a href="#">Sample Link</a></li>
          <li><a href="#">Sample Link</a></li>
          <li><a href="#">Sample Link</a></li>
          <li><a href="#">Sample Link</a></li>

        </ul>
      </div> <!--/BOX-->


      <img src="images/icon_rooster.png" class="rooster" />
      <div class="twitbox">
        <div id="twitter">
          <ul id="twitter_update_list"><li></li></ul>
          
        </div>
        <span class="quote"></span>
      </div> <!--/TWITBOX-->
      <div class="follow"><h2><a href="http://twitter.com/#!/sprowty" target="_blank">@sprowty</a></h2></div>


    </div> <!--/RIGHTSIDE-->

    <%= javascript_include_tag 'http://www.twitter.com/javascripts/blogger.js', 'http://twitter.com/statuses/user_timeline/sprowty.json?callback=twitterCallback2&amp;count=5' %>

    <div class="content">

      <div class="head">

        <div class="left">
          <h2>All Jobs</h2>
          <p>Job Listings</p>
        </div> <!--/LEFT-->

        <div class="right">
          <ul>
            <li class="sort"><b>Filter By:</b></li>
            <li><%= sort_link @search, :created_at, 'Newest' %></li>
            <li><%= sort_link @search, :due_date, 'Expiration' %></li>
            <li><%= sort_link @search, :price %></li>
            <li><%= sort_link @search, :bid_count, 'Sprowt count' %></li>
          </ul>
        </div> <!--/RIGHT-->
      </div> <!--/HEAD-->



      <div id="listings">
        <% @projects.each do |project| %>
          <div class="post">
            <div class="sprowts">
              <span class="bold bid_count"><%= project.bid_count %></span>
              <p>Sprowts</p>
              <p>(Bids)</p>
            </div>

            <div class="pic"><%= link_to image_tag(project.user.profile.picture.url(:thumb)), profile_path(project.user) %></div>

            <div class="info">
              <h2><%= link_to project.title, project_path(project) %></h2>
              <ul class="posted">
                <li><b>Due:</b><%= project.due_date.strftime("%m/%d/%Y") %></li>
                <li>
                <b>By:</b>
                <a id="stay-target-11" class="stay-tooltip-target tooltip-target"><%= project.user.username %></a>
                </li>
                <li><b>Location:</b><%= project.city %>, <%= project.state %></li>
              </ul> <!--/Posted-->


              <p>
              <%= project.description.truncate(30) %>
              <%= link_to 'Read More', project, :class => 'readmore' %>
              </p>

              <ul class="actions">
              <% if current_user %>
                <li><%= link_to 'Sprowt it', new_bid_path(:project => project), :class => 'sprowt' %></li>
                <li><a href="#">Create Similar</a></li>
              <% end %>
                <li class="share"><a id="stay-target-12" class="stay-tooltip-target tooltip-target">Share</a></li>
              </ul>


              <div id="stay-content-12" class="stay-tooltip-username tooltip-share">
                <ul>
                  <li><a href="#" class="facebook"></a></li>
                  <li><a href="#" class="twitter"></a></li>
                  <li><a href="#" class="email"></a></li>
                </ul>
              </div> <!--/stay-content-12-->
            </div> <!--/INFO-->

            <div class="price">
              <h4><%= number_to_currency(project.price, :precision => 0) %></h4>
              <i>Asking Price</i>
            </div>
            <div class="clear"></div>
          </div> <!--/POST TWO-->
          
        <% end %>
        
      </div> <!--/LISTINGS-->
      


    </div> <!--/CONTENT-->
    
  </div> <!--/MAIN-->
  
  <div class="clear"></div>
  <%= will_paginate @projects %>
</div> <!--/CONTAINER-->


