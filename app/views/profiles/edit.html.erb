</div>

<div class="input">
<input class="password" name="New Password" type="text" value="New Password" onfocus="if(this.value=='New Password')this.value=''" onblur="if(this.value=='')this.value='New Password'" />
</div>


<div class="input">
<input class="password" name="Confirm" type="text" value="Confirm" onfocus="if(this.value=='Confirm')this.value=''" onblur="if(this.value=='')this.value='Confirm'" />
</div>


<div id="profile_picture" class="input">
  <div class="label"><label>Profile Picture</label></div>
  <%= f.file_field :picture %>
</div>

</div>
<div class="clear"></div>

<%= f.submit 'Save', :class => 'save' %>
<% end %>

