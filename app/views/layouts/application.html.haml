!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title sprowty
    %meta{:description => "Unique site providing users to bid on projects as well as post projects for bids by other users. Donate money to community projects."}/
    %meta{:content => (keywords = yield :keywords) ? keywords : 'projects,work,money,paid,contract,freelance,bid', :name => "keywords"}/
    %meta{:content => "Â© 2010 Sprowty", :name => "copyright"}/
    %meta{:content => "someone@sprowty.com", :name => "contact"}/
    %meta{:content => "en", "http-equiv" => "content-language"}/
    %meta{:content => "text/html;charset=utf-8", "http-equiv" => "content-type"}/
    %meta{:content => "noindex,nofollow", :name => "robots"}/
    %meta{:content => "nosnippet,nofollow", :name => "googlebot"}/
    = stylesheet_link_tag "application", "colorbox", "slider"
    = javascript_include_tag "jquery", "easySlider1.7", "application", "rails"
    %link{:href => "favicon.ico", :rel => "icon", :type => "image/x-icon"}/
    %link{:href => "favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}/
    = csrf_meta_tag
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-2914822-4']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body
    #topbar
    / /Topbar
    #header
      .left
        .logo
          %h1= link_to 'sprowty', root_path
      / /LEFT
      .right
        - unless current_user
          / SIGN IN
          #logincontainer
            #topnav.topnav
              %a.signin{:href => "login"}
                %span Sign in
            %a#sign_up{:href => new_user_registration_path}
              %img{:src => "/images/sign_up_header.png"}/
            %fieldset#signin_menu
              = semantic_form_for "user", :url => user_session_path do |f|
                %ul
                  = f.input :email, :as => :string
                  = f.input :password, :as => :password
                %p
                  = f.check_box :remember_me
                  = f.label :remember_me
                = f.submit 'Sign in', :style => 'float:right;'
                .clear
          / /SIGN IN
        - else
          %ul.userlog
            %li
              %b Welcome
            %li= link_to current_user.username, profile_path
            %li= link_to 'Logout', logout_path
          %ul.loggedin
            %li= link_to 'My Profile', profile_path
            %li= link_to 'Inbox', inbox_path
            %li
              %a{:href => "/projects"} Projects
            %li
              %a{:href => "#"} You're Needed
      / /RIGHT
      .clear
    / /HEADER
    = yield
    #sign_up_container{:style => "display: none;"}
      = render "shared/sign_up"
    #footer
      .holder
        %a{:href => "#top"}/
        %h3 Back to Top
      / /HOLDER
    / /FOOTER
    / Sign In
    :javascript
      $(function(){

        $(".signin").click(function(e) {
          e.preventDefault();
          $("fieldset#signin_menu").toggle();
          $(".signin").toggleClass("menu-open");
        });

        $("fieldset#signin_menu").mouseup(function() {
          return false
        });

        $(document).mouseup(function(e) {
          if ($(e.target).parent("a.signin").length == 0) {
            $(".signin").removeClass("menu-open");
            $("fieldset#signin_menu").hide();
          }
        });

        $('#forget_username_link').tipsy({ gravity: 'w' });

        $("#stay-target-1 #stay-target-2 #stay-target-3 #stay-target-4 #stay-target-5 #stay-target-6 #stay-target7 #stay-target8 #stay-target8 #stay-target-9 #stay-target-10 #stay-target-11 #stay-target-12").ezpz_tooltip({
        	contentPosition: 'belowStatic',
        	stayOnContent: true,
        	offset: 0
        });

        $('#sign_up').colorbox({ inline: true, href: '#signupcontainer', width: "800px", height: "440px", innerHeight: "420px" });
        $('.plant').colorbox({ width: "800px", Height: "640px" });
        $('.sprowt').colorbox({ width: "50%", height: "570px", innerHeight: "540px" });

        $('.clearField').clearField();
      });
    = yield :javascript
    = javascript_include_tag 'scrolltop', 'jquery.clearfield.min','jquery.ezpz_tooltip.min', 'jquery.tipsy', 'jquery.colorbox-min', :cache => false
    = javascript_include_tag 'http://www.twitter.com/javascripts/blogger.js', 'http://twitter.com/statuses/user_timeline/sprowty.json?callback=twitterCallback2&count=5'
