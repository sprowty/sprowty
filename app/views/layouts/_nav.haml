#header
  .left
    .logo
      %h1= link_to 'sprowty', root_path
  .right
    - unless current_user
      #logincontainer
        #topnav.topnav
          %a.signin{:href => "login"}
            %span Sign in
          %a.signup{:style => "margin-left: 110px; margin-top: -32px", :href => new_user_registration_path}
            %span{:style => "margin-right: 17px"} sign up
        %fieldset#signin_menu
          = semantic_form_for "user", :url => user_session_path do |f|
            %ul
              = f.input :email, :as => :string
              = f.input :password, :as => :password
            %p
              = f.check_box :remember_me
              = f.label :remember_me
            = f.submit 'Sign in', :style => 'float:right;'
            .clear
    - else
      %ul.userlog
        %li
          %b Welcome
        %li= link_to current_user.username, profile_path(current_user.profile.id)
        %li= link_to 'Logout', logout_path
      %ul.loggedin
        %li= link_to 'My Profile', profile_path(current_user.profile.id)
        %li= link_to 'Inbox', inbox_path
        %li
          %a{:href => "/projects"} Projects
  .clear
