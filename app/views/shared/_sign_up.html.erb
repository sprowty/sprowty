<div id="signupcontainer" class="background">
  <div class="left">
    <%= form_for(:user, :url => registration_path('user')) do |f| %>
    <%= fields_for :profile do |p| %>
      <%= p.text_field :username,            :class => "field clearField",     :value => 'Username' %>
    <% end %>
    <%= f.email_field :email,                :class => "field clearField",     :value => 'E-mail Address' %>
    <%= f.text_field :password,              :class => 'field clearField',     :value => "Password" %>
    <%= f.text_field :password_confirmation, :class => 'fieldlast clearField', :value => "Password Confirmation" %>
  </div> <!--LEFT-->

  <div class="right">
    <img class="recaptcha" src="/images/dummy_recaptcha.gif" />

    <div class="radio">
      <input type="radio" name="data[Submit][question]"><p>I have read & agree to sprowtyâ€™s <a href="#">Terms & Conditions</a></p>
    </div>

    <%= f.submit 'Create Account', :class => 'create' %>
  </div> <!--RIGHT-->
  <% end %>
</div> <!--SIGNUPCONTAINER-->