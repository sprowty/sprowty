#signupcontainer
  = form_for(:user, :url => registration_path('user')) do |f|
    .left
      = f.text_field :username,              :class => "field clearField",     :value => 'Username'
      = f.email_field :email,                :class => "field clearField",     :value => 'E-mail Address'
      = f.text_field :password,              :class => 'field clearField',     :value => "Password"
      = f.text_field :password_confirmation, :class => 'fieldlast clearField', :value => "Password Confirmation"
    / LEFT
    .right
      %br/
      %br/
      = link_to image_tag('fbconnect.png', :class => 'fbconnect'), user_omniauth_authorize_path(:facebook)
      %br/
      %br/
      %div{:style => "padding-left:22px; padding-bottom:2px"}
        = f.check_box :terms, :class => 'checkbox', :style => 'width: auto'
        I have read & agree to sprowtyâ€™s
        %a{:href => "#"}
          Terms & Conditions
          %br/
          %br/
      = f.submit 'Create Account', :class => 'create'
    / RIGHT
/ SIGNUPCONTAINER
